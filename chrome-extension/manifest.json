{
  "manifest_version": 3,
  "name": "Jira Task Generator",
  "version": "1.0.0",
  "description": "Generate Jira tasks with AI assistance",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*",
    "https://*.atlassian.com/*",
    "https://*.jira.com/*",
    "http://*.jira.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/*",
        "https://*.atlassian.com/*",
        "https://*.jira.com/*",
        "http://*.jira.com/*",
        "file:///*test-page.html"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Jira Task Generator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
